// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  progress  UserProgress[]
  favorites FavoriteScale[]
}

model Scale {
  id          String   @id @default(cuid())
  name        String   @unique
  intervals   String   // JSON array of intervals (e.g., "1,2,b3,4,5,b6,b7")
  notes       String   // Root-relative notes
  category    String   // e.g., "major", "minor", "pentatonic", "mode"
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  favorites   FavoriteScale[]
}

model Chord {
  id          String   @id @default(cuid())
  name        String   @unique
  intervals   String   // Intervals that make up the chord
  category    String   // e.g., "major", "minor", "seventh", "extended"
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserProgress {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scaleId     String?
  chordId     String?
  practiceTime Int     @default(0) // in seconds
  lastPracticed DateTime @default(now())
  mastery     Int      @default(0) // 0-100 percentage
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, scaleId])
  @@unique([userId, chordId])
}

model FavoriteScale {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scaleId   String
  scale     Scale    @relation(fields: [scaleId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, scaleId])
}
